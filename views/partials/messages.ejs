<% if (typeof errors != 'undefined') { %> 
    <% for (error of errors) { %> 
        <div class="alert alert-danger" role="alert">
            <p>
                <%= error.message %> 
            </p>
        </div>
    <% } %> 
<% } %> 

<% if (success_msg != '' ) { %>
    <div class="alert alert-success" role="alert">
        <%= success_msg %>
    </div>
<% } %> 

<% if (error_msg != '' ) { %>
    <div class="alert alert-danger" role="alert">
        <%= error_msg %>
    </div>
<% } %> 
